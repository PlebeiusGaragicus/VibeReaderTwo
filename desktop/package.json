{
  "name": "vibereader-desktop",
  "version": "2.0.0",
  "description": "VibeReader Desktop - EPUB reader with annotations",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "VibeReader",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-store": "^10.0.0"
  },
  "overrides": {
    "inflight": "npm:@aashutoshrathi/inflight@^1.0.0",
    "glob": "^11.0.0"
  },
  "build": {
    "appId": "com.vibereader.app",
    "productName": "VibeReader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "resources/**/*",
      "../frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": ["**/*", "!venv", "!__pycache__", "!*.pyc"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office",
      "icon": "resources/icon.png"
    }
  }
}
